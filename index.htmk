<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>King Gamer Nep - Loader</title>
  <style>
    body {
      margin: 0;
      background: black;
      color: #00ff88;
      font-family: monospace;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      flex-direction: column;
      overflow: hidden;
    }
    .matrix {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: repeating-linear-gradient(transparent, rgba(0,255,136,0.05) 2px),
                  repeating-linear-gradient(90deg, transparent, rgba(0,255,136,0.05) 2px);
      z-index: 0;
      animation: glow 2s infinite alternate;
    }
    @keyframes glow {
      from { opacity: 0.3; }
      to   { opacity: 0.7; }
    }
    .loader-box {
      z-index: 1;
      text-align: center;
    }
    .spinner {
      border: 4px solid rgba(0,255,136,0.3);
      border-top: 4px solid #00ff88;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      margin: 20px auto;
      animation: spin 1s linear infinite;
    }
    @keyframes spin {
      0% { transform: rotate(0deg);}
      100% { transform: rotate(360deg);}
    }
    #contentFrame {
      display: none;
      width: 100%;
      height: 100vh;
      border: none;
    }
    .error {
      color: red;
      font-size: 1.2em;
      margin-top: 15px;
    }
  </style>
</head>
<body>
  <div class="matrix"></div>
  <div class="loader-box" id="loader">
    <h1>KING GAMER NEP</h1>
    <div class="spinner"></div>
    <p>Loading live app...</p>
  </div>
  <iframe id="contentFrame"></iframe>
  <div id="errorBox" class="error" style="display:none;">âš  Failed to load live content</div>

  <script>
    const GITHUB_INDEX_URL = "https://raw.githubusercontent.com/Kingstha/your-repo/main/index.html"; 
    // TODO: Replace with your real repo path

    const frame = document.getElementById("contentFrame");
    const loader = document.getElementById("loader");
    const errorBox = document.getElementById("errorBox");

    async function loadLivePage() {
      try {
        const response = await fetch(GITHUB_INDEX_URL, { cache: "no-store" });
        if (!response.ok) throw new Error("Fetch failed");
        const html = await response.text();
        frame.srcdoc = html;
        frame.style.display = "block";
        loader.style.display = "none";
        errorBox.style.display = "none";
      } catch (e) {
        loader.style.display = "none";
        errorBox.style.display = "block";
      }
    }

    loadLivePage();

    // Auto-refresh every 60s
    setInterval(loadLivePage, 60000);
  </script>
</body>
</html>